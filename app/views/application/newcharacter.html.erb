<h1>Create a Character</h1>
<%= form_with(url: '/newcharacter', method: 'post', local: true) do %>
  <div class="row">
    <div class="col-10">
      <%= render 'suits' %>
      <div class="row">
        <div class="col-12">
          <label for="characterLevel">Starting Level</label>
          <%= number_field_tag(:level, '1', class: 'form-control', min: 1, max: 11) %>
        </div>
      </div>
    </div>
    <div class="col-sm-2">
      <button type="submit" class="btn btn-success">Choose</button>
      <a href="/reset" class="btn btn-warning">Reset</a>
    </div>
  </div>
<% end %>
