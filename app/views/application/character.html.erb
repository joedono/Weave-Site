<div class="row">
  <div class="col">
    <h1>Name: <%= @name %></h1>
    <p>
      Level: <%= @level %><br>
      Core Suit: <%= @suit %>
      <%= hidden_field_tag(:coresuit, @suit) %>
    </p>
  </div>
  <div class="col text-right">
    <a href="/print_character.txt" class="btn btn-success print-button">Print</a>
  </div>
</div>
<div class="row">
  <div class="col-sm-6">
    <h2>Bonuses</h2>
    <p>
      Stones: +<%= @stonesBonus %><br>
      Gales: +<%= @galesBonus %><br>
      Flames: +<%= @flamesBonus %><br>
      Brooks: +<%= @brooksBonus %><br>
    </p>
  </div>
  <div class="col-sm-4 selector-group">
    <h2>Strikes</h2>
    <% for i in 0..10 do %>
      <label class="selector-container-small <%= i == 0 ? 'selected' : '' %>">
        <%= radio_button_tag(:strike, i, false, class: 'selector', style: 'display: none;') %>
        <%= i %>
      </label>
    <% end %>
    <button type="button" class="btn btn-success" onclick="newScene()" style="margin-top: 10px;">New Scene</button>
  </div>
  <div class="col-sm-2 selector-group">
    <h2>Wounds</h2>
    <% for i in 0..3 do %>
      <label class="selector-container-small <%= i == 0 ? 'selected' : '' %>">
        <%= radio_button_tag(:wound, i, false, class: 'selector', style: 'display: none;') %>
        <%= i %>
      </label>
    <% end %>
    <button type="button" class="btn btn-primary" onclick="resetStrikesAndWounds()" style="margin-top: 10px;">Reset All</button>
  </div>
</div>
<div class="row">
  <div class="col-sm-6">
    <h2>Character Config</h2>
    <textarea class="form-control" rows="<%= @characterChoices.count + 1 %>" style="min-height: 360px; resize: none;">
<% @characterChoices.each do |choice| %>
<%= choice %>
<% end %>
    </textarea>
  </div>
  <div class="col-sm-6">
    <h2>Challenges</h2>
    <%= render 'suits' %>
    <div class="row">
      <div class="col-sm-8 form-check text-center">
        <%= check_box_tag(:iscore, class: 'form-check-input') %>
        <label class="form-check-label" for="iscore">Core Challenge?</label>
      </div>
      <div class="col-sm-4">
        <button type="button" class="btn btn-primary" onclick="rollDice(<%= @stonesBonus %>, <%= @galesBonus %>, <%= @flamesBonus %>, <%= @brooksBonus %>)">Roll</button>
      </div>
    </div>
    <div class="row">
      <div class="col">
        <textarea id="rollresult" class="form-control" rows="8" style="resize: none;"></textarea>
      </div>
    </div>
  </div>
</div>
<div class="row">
  <div class="col"><h2>Backstories</h2></div>
</div>
<div class="row">
  <% @character['Backstories'].each_with_index do |quality, index| %>
    <div class="col-sm-6">
      <label class="selector-container-quality">
        <h3><%= quality['title'] %></h3>
        <p><%= quality['description'] %></p>
        <% quality['subQualities'].each do |subQuality| %>
          <% next if subQuality['title'] == 'Storyteller' %>
          <h4><%= subQuality['title'] %></h4>
          <p><%= subQuality['description'] %></p>
        <% end %>
      </label>
    </div>
    <% if index.modulo(2) == 1 %>
      </div><div class="row">
    <% end %>
  <% end %>
</div>
