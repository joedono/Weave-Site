<h1>Leveling Up</h1>
<%= form_with(url: '/levelupcharacter', method: 'post', local: true) do %>
  <div class="row">
    <div class="col-10">
      <div class="row">
        <div class="col-sm-3">
          <label class="selector-container">
            <%= radio_button_tag(:suit, 'Stones', false, class: 'selector', style: 'display: none;') %>
            Stones
          </label>
        </div>
        <div class="col-sm-3">
          <label class="selector-container">
            <%= radio_button_tag(:suit, 'Gales', false, class: 'selector', style: 'display: none;') %>
            Gales
          </label>
        </div>
        <div class="col-sm-3">
          <label class="selector-container">
            <%= radio_button_tag(:suit, 'Flames', false, class: 'selector', style: 'display: none;') %>
            Flames
          </label>
        </div>
        <div class="col-sm-3">
          <label class="selector-container">
            <%= radio_button_tag(:suit, 'Brooks', false, class: 'selector', style: 'display: none;') %>
            Brooks
          </label>
        </div>
      </div>
      <div class="row">
        <div class="col-sm-6">
          <label>Current Level</label>
          <%= number_field_tag(:current_level, '1', class: 'form-control', min: 1, max: 11) %>
        </div>
        <div class="col-sm-6">
          <label>Desired Level</label>
          <%= number_field_tag(:desired_level, '1', class: 'form-control', min: 1, max: 11) %>
        </div>
      </div>
      <div class="row">
        <div class="col-sm-12">
          <label>Character Import</label>
          <%= text_area_tag(:char_import, nil, rows: 11, class: 'form-control') %>
        </div>
      </div>
    </div>
    <div class="col-sm-2">
      <button type="submit" class="btn btn-success">Choose</button>
      <a href="/reset" class="btn btn-warning">Reset</a>
    </div>
  </div>
<% end %>
