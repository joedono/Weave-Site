<h1>Playset Selection</h1>
<%= form_with(url: "/start", method: "post") do %>
  <div class="row">
    <% @playsets.each do |playset| %>
      <div class="col-sm-3">
        <label class="selector-container">
          <%= radio_button_tag(:playset, playset["name"], false, class: "selector", style: "display: none;") %>
          <%= playset["name"] %>
        </label>
      </div>
    <% end %>
  </div>
  <div class="row">
    <div class="col-xs-12 text-right">
      <input type="submit" class="btn btn-success" value="Choose">
    </div>
  </div>
<% end %>
