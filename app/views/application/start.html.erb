<h1>Playset Selection</h1>
<%= form_with(url: '/start', method: 'post', local: true) do %>
  <div class="row">
    <div class="col-sm-10">
      <div class="row">
        <% @playsets.each do |playset| %>
          <div class="col-sm-3">
            <label class="selector-container">
              <%= radio_button_tag(:playset, playset['name'], false, class: 'selector', style: 'display: none;') %>
              <%= playset['name'] %>
            </label>
          </div>
        <% end %>
      </div>
    </div>
    <div class="col-sm-2">
      <button type="submit" class="btn btn-success">Choose</button>
      <a href="/reset" class="btn btn-default">Reset</a>
    </div>
  </div>
<% end %>
