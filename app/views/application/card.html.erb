<h1>Pick a Card - Level <%= @level %></h1>
<%= form_with(url: '/card', method: 'post', local: true) do %>
  <div class="row">
    <div class="col-sm-10">
      <div class="row selector-group">
        <% @cards.each do |card| %>
          <div class="col-sm-3">
            <label class="selector-container">
              <%= radio_button_tag(:card, card, false, class: 'selector', style: 'display: none;') %>
              <%= card %>
            </label>
          </div>
        <% end %>
      </div>
    </div>
    <div class="col-sm-2">
      <button type="submit" class="btn btn-success">Choose</button>
      <a href="/reset" class="btn btn-warning">Reset</a>
    </div>
  </div>
<% end %>
