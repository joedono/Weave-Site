<h1>Playset Selection</h1>
<%= form_with(url: '/start', method: 'post', local: true) do %>
  <div class="row">
    <div class="col-sm-10">
      <div class="row selector-group">
        <% @playsets.each do |playset| %>
          <div class="col-sm-3">
            <label class="selector-container">
              <%= image_tag playset["img"], class: "img-fluid" %>
              <%= radio_button_tag(:playset, playset['name'], false, class: 'selector', style: 'display: none;') %>
              <%= playset['name'] %>
            </label>
          </div>
        <% end %>
      </div>
    </div>
    <div class="col-sm-2">
      <%= render 'buttons' %>
    </div>
  </div>
<% end %>
