<h1>View Character</h1>
<%= form_with(url: '/importcharacter', method: 'post', local: true) do %>
  <div class="row">
    <div class="col-10">
      <div class="row">
        <div class="col-12">
          <label>Core Suit</label>
        </div>
      </div>
      <%= render 'suits' %>
      <div class="row">
        <div class="col-sm-6">
          <label>Name</label>
          <%= text_field_tag(:name, nil, class: 'form-control') %>
        </div>
        <div class="col-sm-6">
          <label>Current Level</label>
          <%= number_field_tag(:current_level, '1', class: 'form-control', min: 1, max: 11) %>
        </div>
      </div>
      <div class="row">
        <div class="col-sm-12">
          <label>Character Import</label>
          <%= text_area_tag(:character, nil, rows: 11, class: 'form-control') %>
        </div>
      </div>
    </div>
    <div class="col-sm-2">
      <%= render 'buttons' %>
    </div>
  </div>
<% end %>
